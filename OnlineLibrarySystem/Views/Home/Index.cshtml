@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>E-Library</title>
    <style>
        body, html {
          margin: 0;
          padding: 0;
        }

        .container {
          position: relative;
          width: 100vw;
          height: 100vh;
        }

        .image {
          width: 100%;
          height: 100%;
          object-fit: cover; /* Ensures the image covers the screen */
          display: block;
        }

        .text-overlay {
          position: absolute;
          top: 50px;
          left: 20px;
          color:white;
          font-size: 36px;
          font-weight: bold;
          padding: 15px 30px;
          border-radius: 8px;
          font-family: sans-serif;
        }
    </style>
</head>
<body>

    <div class="container">
        <img src="https://t4.ftcdn.net/jpg/10/67/33/31/360_F_1067333110_KgquYPHoulJkx6Cp089oOWHOJLNakbx6.jpg" alt="E-Library" class="image">
        <div class="text-overlay">Welcome to E-Library</div>
    </div>

</body>
</html>
